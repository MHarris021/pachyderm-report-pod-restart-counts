{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
    },
    "include": [
        "src/**/*"
    ],
    "paths": {
        "@models/*": ["src/models/*"],
        "@constants/*": ["src/constants/*"],
    },
    "exclude": [
        "node_modules"
    ]
}